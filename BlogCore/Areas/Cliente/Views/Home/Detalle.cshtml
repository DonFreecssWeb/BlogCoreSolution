@model BlogCore.Models.Articulo

@{
    ViewData["Title"] = "Detalle";

    DateTime fecha = @Model.FechaCreacion;
}


<div class="card mt-3">
    <div class="card-header ">
       
            <div class="text-center">
                <h4 class="text-primary">@Model.Nombre</h4>
            </div>
            <div >
                <p class="text-primary">Fecha: @fecha.ToString("dd/MM/yyyy")</p>
            </div>
      
            
    </div>
    <div class="card-body">
        <div class="col-12">
            <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block"/>
            <p class="text-secondary">@Model.Descripcion</p>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 col-md-6 pb-1">
                <a asp-controller="Home" asp-action="Index" class="btn btn-success">Volver atrás</a>
            </div>
        </div>
    </div>
</div>
