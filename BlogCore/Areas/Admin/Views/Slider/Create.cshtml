@model BlogCore.Models.ViewModels.SliderVM

@{
    ViewData["Title"] = "Crear Slider";
}
<br />
<br />

<h3>Crear una nuevo Slider</h3>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-8">
                    <input class="form-check" asp-for="Estado" />                    

                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" class="form-control" name="subidas" id="subidaArchivo" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-8">
                    <partial name="_VistaCrearVolver"></partial>
                </div>
            </div>
        </div>
    </div>

</form>

@* Validaciones del lado del cliente *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}