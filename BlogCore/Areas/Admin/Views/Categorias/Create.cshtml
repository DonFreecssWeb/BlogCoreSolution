@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoria";
}
<br />
<br/>

<h3>Crear una nueva categoria</h3>
<form asp-action="Create" method="post">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />                    
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Orden"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" placeholder="Ingresa la orden" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <div >
                <div class="col-8">
                    <partial name="_VistaCrearVolver" ></partial>
                </div>
            </div>
        </div>
    </div>

</form>

@* Validaciones del lado del cliente *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}